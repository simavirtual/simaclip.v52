       SET CURSOR ON
       nNroFil := nMarco(nNroFil,'POR FAVOR DIGITE LAS DIFERENTES '+;
			 'FORMAS DE PAGO',22,'°')
       DO WHILE .T.

**********INICIALIZACION DE LAS VARIABLES
	    IF !lHayErr
	       cCodigoTfp := cSpaces('FPG','cCodigoFpg')
	       cNombreTfp := cSpaces('FPG','cNombreFpg')
	    ENDIF
